# Gemini AI Configuration (Required)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemini-2.5-pro-exp

# Server Configuration
PORT=3000

# Python & Manim Paths (Optional - use defaults if not set)
# Local Windows Development:
# PYTHON_EXE=D:/manimfixerai2/manimenv/Scripts/python.exe
# MANIM_EXE=D:/manimfixerai2/manimenv/Scripts/manim.exe

# Local Linux/Mac Development:
# PYTHON_EXE=python3
# MANIM_EXE=manim

# Production/Docker:
# PYTHON_EXE=python3
# MANIM_EXE=manim

# Optional: AWS Credentials (if using AWS Polly instead of gTTS)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# Optional: Google Cloud TTS (if using Google TTS instead of gTTS)
# GOOGLE_APPLICATION_CREDENTIALS=./google-tts-credentials.json
